<!-- Unique CrowdZero Loader -->
<div id="page-loader">
    <div class="loader-box">
      <div class="loader-text">
        <span class="crowd">Crowd</span>
        <span class="zero">Zero</span>
      </div>
      <div class="loading-bar">
        <div class="loading-progress"></div>
      </div>
    </div>
  </div>
  
  <style>
    /* Fullscreen overlay */
    #page-loader {
      position: fixed;
      inset: 0;
      background: #111; /* dark background */
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 99999;
      transition: opacity 0.8s ease;
    }
  
    /* Loader container */
    .loader-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
  
    /* Loader text */
    .loader-text {
      font-size: 3rem;
      font-weight: 900;
      text-transform: uppercase;
      display: flex;
      align-items: flex-start;
      gap: 4px;
      animation: pulse 2s infinite ease-in-out;
    }
  
    .crowd {
      color: #fff;
    }
  
    .zero {
      font-size: 1.2rem;         
      color: #000;              
      text-decoration: underline;
      align-self: flex-start;   
      margin-top: 0.2rem;       
      font-weight: 700;
      background: #fff;         
      padding: 0 4px;
      border-radius: 4px;
    }
  
    /* Loading bar */
    .loading-bar {
      width: 300px;
      height: 6px;
      background: #333;
      border-radius: 10px;
      overflow: hidden;
      position: relative;
    }
  
    .loading-progress {
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, #ff8000, #ffa734, #ff9900);
      background-size: 200% 100%;
      animation: progressAnim 1.5s linear infinite;
    }
  
    /* Animations */
    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.05); opacity: 0.8; }
    }
  
    @keyframes progressAnim {
      0%   { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }
  </style>
  
  <script>
    window.addEventListener("load", () => {
      const loader = document.getElementById("page-loader");
      loader.style.opacity = "0";
      setTimeout(() => loader.style.display = "none", 800); // fade out
    });
  </script>
  